<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <!--导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00B8EE">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:text="个人中心"

            android:textSize="45px"
            android:textColor="#fff" />



    </RelativeLayout>


    <!--账户管理-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_me"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:src="@drawable/man5"
            android:layout_weight="3"
            android:layout_gravity="center"

            />

        <LinearLayout
            android:id="@+id/linearlayout_account"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="-20dp"
                android:text="未登录"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="账户管理"

                android:layout_weight="2"
                android:layout_marginRight="-20dp"
                android:layout_gravity="center"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/to"
                android:layout_weight="2"


                />
        </LinearLayout>
    </LinearLayout>





    <TextView
    android:layout_width="match_parent"
        android:layout_height="20dp" />
    <!--用户信息-->
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/account_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/account_blue"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="账户:"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/text_account"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/rename"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sex_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/sex_blue"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="性别:"
                android:gravity="center"
                />

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/text_sex"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/rename"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mail_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/mail_blue"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="邮箱:"
                android:gravity="center"
                />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/text_mail"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/rename"
                />
        </LinearLayout>


    </LinearLayout>


<!--客服设置消息收藏等-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/me_news_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/news"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="我的消息"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/to"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/me_feedback_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/feedback"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="反        馈"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/to"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_pingfen_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/pingfen"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="评        分"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/to"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_pics_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/image"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="查看图片"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/to"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_update_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/update"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="检查更新"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/to"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_about_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/about"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="关        于"
                android:gravity="center"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/to"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>