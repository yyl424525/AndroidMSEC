<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yyl="http://schemas.android.com/apk/test.zhuoyuezhilu4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <!--头部-->
<LinearLayout
    android:background="#00B8EE"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="50dp">

    <TextView
        android:layout_width="0dp"
        android:text="四川大学制造科学与工程学院"
        android:textColor="#fff"
        android:layout_weight="5"
        android:textSize="45px"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />


</LinearLayout>

    <com.example.yyl.msec.utils.ViewPagerIndicator
        android:id="@+id/id_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F2F3F3"
        android:orientation="horizontal"
        yyl:visible_tab_count="4"
        >
    </com.example.yyl.msec.utils.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>